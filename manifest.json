{
	"manifest_version": 2,
	"name": "marriage-reserver",
	"version": "1.0",
	"description": "广东省结婚登记预约小帮手",
	"icons": {
		"19": "images/logo.png",
		"38": "images/logo.png",
		"128": "images/logo.png"
	},

	"browser_action": {
		"default_title": "快速填好预约结婚领证用的各项信息",
		"default_popup": "popup.html"
	},

	"content_scripts": [{
		"matches": ["*://www.gdhy.gov.cn/*"],
		"js": ["./src/content_scripts/marriage.js"],
		"run_at": "document_start"
	}],

	"permissions": ["tabs"],

	"background": {
		"scripts": []
	}
}
